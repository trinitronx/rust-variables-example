        {
            "type": "cargo",
            "command": "build",
            "args": [
                "--release"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "rust: cargo build --release",
            "icon": {
                "id": "rocket"
            }
        },
        {
            "type": "cargo",
            "command": "check",
            "problemMatcher": [
